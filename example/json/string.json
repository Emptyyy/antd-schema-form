{
  "$id": "$root/properties/string",
  "type": "object",
  "title": "字符串",
  "description": "渲染字符串类型的组件。",
  "properties": {
    "default": {
      "$id": "$root/properties/string/properties/default",
      "type": "string",
      "title": "默认组件",
      "description": "默认组件"
    },
    "hasValue": {
      "$id": "$root/properties/string/properties/hasValue",
      "type": "string",
      "title": "组件有默认值",
      "description": "组件有默认值",
      "$defaultValue": "默认值"
    },
    "readonly": {
      "$id": "$root/properties/string/properties/readonly",
      "type": "string",
      "title": "组件只读",
      "description": "组件只读",
      "$readOnly": true,
      "$defaultValue": "默认值"
    },
    "minLength": {
      "$id": "$root/properties/string/properties/minLength",
      "type": "string",
      "title": "组件有最小长度",
      "description": "组件有最小长度",
      "minLength": 3,
      "$placeholder": "组件有最小长度：3"
    },
    "maxLength": {
      "$id": "$root/properties/string/properties/maxLength",
      "type": "string",
      "title": "组件有最大长度",
      "description": "组件有最大长度",
      "maxLength": 5,
      "$placeholder": "组件有最大长度：5"
    },
    "length": {
      "$id": "$root/properties/string/properties/length",
      "type": "string",
      "title": "组件有固定长度",
      "description": "组件有固定长度",
      "$length": 5,
      "$placeholder": "组件有固定长度：5"
    },
    "pattern": {
      "$id": "$root/properties/string/properties/pattern",
      "type": "string",
      "title": "组件正则验证",
      "description": "组件正则验证",
      "pattern": "^[a-z]+$",
      "$patternOption": "ig",
      "$placeholder": "/^[a-z]+$/ig"
    },
    "select": {
      "$id": "$root/properties/string/properties/select",
      "type": "string",
      "title": "下拉框组件",
      "description": "下拉框组件",
      "$componentType": "select",
      "$options": [
        {
          "label": "选项1",
          "value": "值1"
        },
        {
          "label": "选项2",
          "value": "值2"
        }
      ]
    },
    "radio": {
      "$id": "$root/properties/string/properties/radio",
      "type": "string",
      "title": "单选框组件",
      "description": "单选框组件",
      "$componentType": "radio",
      "$options": [
        {
          "label": "选项1",
          "value": "值1"
        },
        {
          "label": "选项2",
          "value": "值2"
        }
      ]
    },
    "date": {
      "$id": "$root/properties/string/properties/date",
      "type": "string",
      "title": "日期组件",
      "description": "日期组件",
      "$componentType": "date",
      "$defaultValue": "2010-12-15 08:12:14"
    },
    "file": {
      "$id": "$root/properties/string/properties/file",
      "type": "string",
      "title": "文件上传",
      "description": "文件上传",
      "$componentType": "file"
    }
  }
}